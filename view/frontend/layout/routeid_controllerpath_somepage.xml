<?xml version="1.0"?>
<!--
This file name must match route ID in routes.xml and then the controller/action values in controller
Refers directly to its block and template.
Adds the block (in this case) to the already existing content container
This file could reference other containers or additional blocks.
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="content">
        <block class="MyCompany\MyModule\Block\MyBlock" name="this_controller_name" template="MyCompany_MyModule::mytemplate.phtml" />
    </referenceContainer>
</page>